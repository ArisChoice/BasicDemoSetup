<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="0" android:endColor="@color/color_light_grey_blue" android:startColor="@color/color_light_grey_blue" />
            <corners android:radius="@dimen/_4sdp" />
        </shape>
    </item>

    <item>

        <shape android:shape="rectangle">
            <gradient android:angle="0" android:endColor="@color/color_grey_white" android:startColor="@color/color_grey_white" />
            <corners android:bottomRightRadius="@dimen/_1ssp" android:radius="@dimen/_10sdp" />
        </shape>
    </item>
</selector>
