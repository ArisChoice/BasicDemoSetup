<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="0" android:endColor="@color/colorPrimaryDark" android:startColor="@color/colorPrimaryDark" />

            <corners android:radius="5dp" />
        </shape>
    </item>

    <item>

        <shape android:shape="rectangle">
            <gradient android:angle="0" android:endColor="@android:color/transparent" android:startColor="@android:color/transparent" />

            <corners android:radius="5dp" />
        </shape>
    </item>
</selector>
