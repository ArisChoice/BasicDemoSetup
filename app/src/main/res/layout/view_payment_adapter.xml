<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:background="@drawable/rectangle_white_border">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/view_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_1ssp"
            android:layout_weight="1"
            android:background="@color/color_white"
            android:gravity="left"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp">

            <com.app.barber.views.CustomTextView
                android:id="@+id/appoint_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_10ssp"
                android:singleLine="true"
                android:text="3:14 PM, Sep 26,2018"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_11ssp" />

            <com.app.barber.views.CustomTextView
                android:id="@+id/appoint_barber_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingLeft="@dimen/_10ssp"
                android:singleLine="true"
                android:text="Appointment"
                android:textSize="@dimen/_11ssp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/go_next"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_1ssp"
            android:background="@color/color_white">

            <com.app.barber.views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/_15ssp"
                android:drawableTint="@color/color_grey"
                android:drawableRight="@drawable/arrow_right_copy"
                android:padding="@dimen/_10ssp"
                android:text="$0.00"
                android:textColor="@color/color_black" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>