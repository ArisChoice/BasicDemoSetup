<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_common_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_50ssp"
            android:orientation="vertical">

            <com.app.barber.views.CustomTextView
                android:id="@+id/txt_field_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/str_first_name"
                android:textSize="@dimen/_13ssp" />

            <com.app.barber.views.CustomEditText
                android:id="@+id/edtxt_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/str_first_name"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/str_first_name"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />

            <com.app.barber.views.CustomTextView
                android:id="@+id/txt_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_60ssp"
                android:background="@drawable/rounded_orange_background"
                android:paddingBottom="@dimen/_10ssp"
                android:paddingLeft="@dimen/_50ssp"
                android:paddingRight="@dimen/_50ssp"
                android:paddingTop="@dimen/_10ssp"
                android:text="@string/str_update"
                android:textColor="@color/color_white"
                android:textSize="@dimen/_15ssp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>