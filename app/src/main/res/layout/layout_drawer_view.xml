<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.app.barber.views.CustomTextView
            android:id="@+id/side_btn_my_trips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawablePadding="@dimen/_10ssp"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/_10ssp"
            android:paddingLeft="@dimen/_10ssp"
            android:paddingTop="@dimen/_10ssp"
            android:text="@string/str_my_trips"
            android:textColor="@color/color_black"
            android:textSize="@dimen/_13ssp" />

        <include layout="@layout/divider_view" />

        <com.app.barber.views.CustomTextView
            android:id="@+id/side_btn_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawablePadding="@dimen/_10ssp"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/_10ssp"
            android:paddingLeft="@dimen/_10ssp"
            android:paddingTop="@dimen/_10ssp"
            android:text="@string/str_customer_services"
            android:textColor="@color/color_black"
            android:textSize="@dimen/_13ssp" />

        <include layout="@layout/divider_view" />

        <com.app.barber.views.CustomTextView
            android:id="@+id/side_btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawablePadding="@dimen/_10ssp"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/_10ssp"
            android:paddingLeft="@dimen/_10ssp"
            android:paddingTop="@dimen/_10ssp"
            android:text="@string/str_logout"
            android:textColor="@color/color_black"
            android:textSize="@dimen/_13ssp" />

        <include layout="@layout/divider_view" />

    </LinearLayout>

</LinearLayout>
