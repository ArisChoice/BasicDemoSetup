<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_background"
    android:orientation="vertical">

    <include layout="@layout/layout_common_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_5ssp">

        <com.app.barber.views.CustomTextView
            android:id="@+id/selected_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10ssp"
            android:text="Day"
            android:textColor="@color/colorPrimary"
            app:textAllCaps="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10ssp">

            <com.app.barber.views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_opening_time"
                android:textColor="@color/color_white" />

            <com.app.barber.views.CustomTextView
                android:id="@+id/opening_Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="10:00 AM"
                android:textColor="@color/color_white" />

            <com.app.barber.views.CustomTextView
                android:id="@+id/open_change_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounder_blue_drawable"
                android:padding="@dimen/_5ssp"
                android:text="@string/str_change"
                android:textColor="@color/color_white"
                android:textSize="@dimen/_10ssp" />

        </LinearLayout>

        <include layout="@layout/divider_view" />
        <!---->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10ssp">

            <com.app.barber.views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_closing_time"
                android:textColor="@color/color_white" />

            <com.app.barber.views.CustomTextView
                android:id="@+id/closing_Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="10:00 PM"
                android:textColor="@color/color_white" />

            <com.app.barber.views.CustomTextView
                android:id="@+id/close_change_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounder_blue_drawable"
                android:padding="@dimen/_5ssp"
                android:text="@string/str_change"
                android:textColor="@color/color_white"
                android:textSize="@dimen/_10ssp" />

        </LinearLayout>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5ssp"
            android:text="@string/str_same_for_all"
            android:textColor="@color/color_light_grey_blue" />

        <com.app.barber.views.CustomTextView
            android:id="@+id/done_btn"
            android:layout_width="@dimen/_100ssp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_50ssp"
            android:background="@drawable/rectangle_blue_drawable"
            android:gravity="center"
            android:paddingBottom="@dimen/_5ssp"
            android:paddingTop="@dimen/_5ssp"
            android:text="@string/str_done"
            android:textColor="@color/color_white" />
    </LinearLayout>
</LinearLayout>
