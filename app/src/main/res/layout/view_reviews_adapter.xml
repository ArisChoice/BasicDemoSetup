<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RatingBar
            style="@style/Base.Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressBackgroundTint="@color/color_grey"
            android:progressTint="@color/color_yellow"
            android:rating="4"

            android:text="@string/str_user_name"
            android:textColor="@color/color_white" />


        <com.app.barber.views.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="Oct 11,2018"
            android:textColor="@color/color_black"
            android:textSize="@dimen/_8ssp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/user2_copy" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <com.app.barber.views.CustomTextView
                android:id="@+id/barber_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_full_name"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_13ssp" />

            <com.app.barber.views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_sample_desc"
                android:textColor="@color/color_grey"
                android:textSize="@dimen/_10ssp" />
        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/divider_view_grey" />
</LinearLayout>