<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:gravity="left|center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/_10ssp"
    android:paddingTop="@dimen/_20ssp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/side_image_user"
        android:layout_width="@dimen/_60ssp"
        android:layout_height="@dimen/_60ssp"
        />

    <LinearLayout
        android:id="@+id/lay_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.app.barber.views.CustomTextView
            android:id="@+id/user_profilr_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingBottom="@dimen/_2ssp"
            android:paddingLeft="@dimen/_3ssp"
            android:singleLine="true"
            android:text="@string/str_user_name"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_16ssp" />

        <com.app.barber.views.CustomTextView
            android:id="@+id/edit_profile_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_2ssp"
            android:paddingLeft="@dimen/_3ssp"
            android:text="@string/str_edit_profile"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_13ssp" />
    </LinearLayout>
</LinearLayout>
