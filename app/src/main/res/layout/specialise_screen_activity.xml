<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_background"
    android:orientation="vertical">

    <include layout="@layout/layout_common_toolbar_trans" />

    <com.app.barber.views.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10ssp"
        android:text="@string/str_specialise_in"
        android:textColor="@color/color_white"
        android:textSize="@dimen/_18ssp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <include layout="@layout/layout_common_recyclay_view" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="gone">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/type_barber_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5ssp"
                android:background="@drawable/rectangle_selected_type_drawable"
                android:gravity="center_vertical"
                android:padding="@dimen/_25ssp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.app.barber.views.CustomTextView
                        android:id="@+id/text_type_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/str_afro_caribbean"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_18ssp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/img_check_type_one"
                    android:layout_width="@dimen/_20ssp"
                    android:layout_height="@dimen/_20ssp"
                    android:src="@drawable/icon_copy"
                    android:visibility="visible" />
            </LinearLayout>
            <!--Type two Layout-->
            <LinearLayout
                android:id="@+id/type_callout_barber_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5ssp"
                android:background="@drawable/rectangle_unselected_type_drawable"
                android:gravity="center_vertical"
                android:padding="@dimen/_25ssp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.app.barber.views.CustomTextView
                        android:id="@+id/text_type_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/str_asian_hair"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/_18ssp" />


                </LinearLayout>

                <ImageView
                    android:id="@+id/img_check_type_two"
                    android:layout_width="@dimen/_20ssp"
                    android:layout_height="@dimen/_20ssp"
                    android:src="@drawable/icon_copy"
                    android:visibility="gone" />
            </LinearLayout>
            <!--Type three layout-->
            <LinearLayout
                android:id="@+id/type_tranee_barber_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5ssp"
                android:background="@drawable/rectangle_unselected_type_drawable"
                android:gravity="center_vertical"
                android:padding="@dimen/_25ssp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.app.barber.views.CustomTextView
                        android:id="@+id/text_type_three"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/str_caucasian"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/_18ssp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/img_check_type_three"
                    android:layout_width="@dimen/_20ssp"
                    android:layout_height="@dimen/_20ssp"
                    android:src="@drawable/icon_copy"
                    android:visibility="gone" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">

        <com.app.barber.views.CustomTextView
            android:id="@+id/skip_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="@dimen/_10ssp"
            android:paddingLeft="@dimen/_20ssp"
            android:paddingTop="@dimen/_10ssp"
            android:text="@string/str_skip"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_15ssp" />

        <ImageView
            android:id="@+id/continue_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="@dimen/_30ssp"
            android:layout_marginRight="@dimen/_20ssp"
            android:layout_marginTop="@dimen/_10ssp"
            android:src="@drawable/arrow_button" />
    </LinearLayout>

</LinearLayout>