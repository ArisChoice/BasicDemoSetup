<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_white_border"
    android:orientation="vertical"
    android:padding="@dimen/_10ssp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.app.barber.views.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="@dimen/_10ssp"
            android:paddingTop="@dimen/_10ssp"
            android:text="@string/str_barber"
            android:textColor="@color/color_black"
            android:textSize="@dimen/_14ssp" />

        <com.app.barber.views.CustomTextView
            android:id="@+id/appointment_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10ssp"
            android:background="@drawable/rectangle_white_border"
            android:backgroundTint="@color/color_grey_white"
            android:gravity="center"
            android:minWidth="@dimen/_50ssp"
            android:paddingBottom="@dimen/_2sdp"
            android:paddingLeft="@dimen/_3sdp"
            android:paddingRight="@dimen/_3sdp"
            android:paddingTop="@dimen/_2sdp"
            android:text="@string/str_upcoming"
            android:textColor="@color/color_light_grey_blue"
            android:visibility="gone" />

        <com.app.barber.views.CustomTextView
            android:id="@+id/status_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_2sdp"
            android:paddingLeft="@dimen/_3sdp"
            android:paddingRight="@dimen/_3sdp"
            android:paddingTop="@dimen/_2sdp"
            android:text="@string/str_upcoming"
            android:textColor="@color/color_white" />
    </LinearLayout>

    <include layout="@layout/layout_barber_booking_view" />

    <include layout="@layout/layout_booking_info_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.app.barber.views.CustomTextView
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5ssp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_grey_border"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="@string/str_cancel"
            android:textColor="@color/color_black"
            android:textSize="@dimen/_14ssp" />

        <com.app.barber.views.CustomTextView
            android:id="@+id/complete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5ssp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_blue_drawable"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="@string/str_reorder"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_14ssp" />
    </LinearLayout>

</LinearLayout>