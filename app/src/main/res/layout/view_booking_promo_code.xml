<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <com.app.barber.views.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_promo_code"
        android:textColor="@color/color_black"
        android:textSize="@dimen/_15ssp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rectangle_grey_border_dashgap"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.app.barber.views.CustomEditText
                android:id="@+id/booking_promo_code_edtxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="@dimen/_5sdp"
                android:singleLine="true" />

            <ImageView
                android:id="@+id/booking_remove_promo_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/circular_grey_background"
                android:padding="@dimen/_5sdp"
                android:backgroundTint="@color/color_light_grey"
                android:src="@drawable/cross2_copy" />
        </LinearLayout>

        <com.app.barber.views.CustomTextView
            android:id="@+id/booking_promo_apply_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10ssp"
            android:background="@drawable/rounder_blue_drawable"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingLeft="@dimen/_15ssp"
            android:paddingRight="@dimen/_15ssp"
            android:paddingTop="@dimen/_10sdp"
            android:text="@string/str_apply"
            android:textColor="@color/color_white" />
    </LinearLayout>
</LinearLayout>