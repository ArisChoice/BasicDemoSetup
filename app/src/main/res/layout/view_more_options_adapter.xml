<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/_5ssp"
        android:layout_marginRight="@dimen/_5ssp"
        android:background="@drawable/general_default_click"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/option_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_15ssp"
            android:src="@drawable/availibility_copy"
            android:tint="@color/color_grey" />

        <com.app.barber.views.CustomTextView
            android:id="@+id/option_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/_15ssp"
            android:text="@string/str_availabliity"
            android:textColor="@color/color_grey"
            android:textSize="@dimen/_13ssp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_15ssp"
            android:src="@drawable/arrow_right_copy"
            android:tint="@color/color_grey" />
    </LinearLayout>

    <include layout="@layout/divider_view_grey" />

</LinearLayout>