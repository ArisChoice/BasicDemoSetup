<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/landing"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/logo_copy" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_app_background"
        android:orientation="vertical">

        <com.app.barber.views.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/_25ssp"
            android:paddingRight="@dimen/_25ssp"
            android:paddingTop="@dimen/_10ssp"
            android:text="@string/str_welcome_to_barber_app"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_18ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_15ssp"
            android:orientation="horizontal">

            <com.app.barber.views.CustomTextView
                android:id="@+id/sign_in_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5ssp"
                android:layout_weight="1"
                android:background="@drawable/rectangle_white_border"
                android:gravity="center"
                android:padding="@dimen/_8ssp"
                android:text="@string/str_sign_in"
                android:textAllCaps="true"
                android:textColor="@color/color_white"
                android:textSize="@dimen/_13ssp" />

            <com.app.barber.views.CustomTextView
                android:id="@+id/register_btn_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5ssp"
                android:layout_weight="1"
                android:background="@drawable/rectangle_blue_drawable"
                android:gravity="center"
                android:padding="@dimen/_8ssp"
                android:text="@string/str_register"
                android:textAllCaps="true"
                android:textColor="@color/color_white"
                android:textSize="@dimen/_13ssp" />

        </LinearLayout>

        <include layout="@layout/divider_view_grey" />

        <com.app.barber.views.CustomTextView
            android:id="@+id/book_barber_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_10ssp"
            android:text="@string/str_book_a_barber"
            android:textColor="@color/colorPrimary"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>

