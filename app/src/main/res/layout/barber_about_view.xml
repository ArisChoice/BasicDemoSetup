<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/_about_barber_image"
            android:layout_width="@dimen/_45ssp"
            android:layout_height="@dimen/_45ssp"
            android:background="@drawable/user2_copy"
            app:roundAsCircle="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <com.app.barber.views.CustomTextView
                android:id="@+id/_about_barber_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_barber_name"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_15ssp" />

            <com.app.barber.views.CustomTextView
                android:id="@+id/_about_barber_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*******" />
        </LinearLayout>

        <ImageView
            android:id="@+id/message_btn"
            android:layout_width="@dimen/_38ssp"
            android:layout_height="@dimen/_38ssp"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/circular_light_blue_background"
            android:backgroundTint="@color/color_app_blue"
            android:padding="@dimen/_10ssp"
            android:src="@drawable/message_normal"
            android:tint="@color/color_white" />

        <ImageView
            android:id="@+id/call_btn"
            android:layout_width="@dimen/_38ssp"
            android:layout_height="@dimen/_38ssp"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/circular_light_blue_background"
            android:backgroundTint="@color/color_green"
            android:padding="@dimen/_10ssp"
            android:src="@drawable/phone_2" />
    </LinearLayout>

    <com.app.barber.views.CustomTextView
        android:id="@+id/_about_barber_desd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:text="@string/str_sample_desc"
        android:textColor="@color/color_grey"
        android:textSize="@dimen/_10ssp" />
</LinearLayout>