<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <com.app.barber.views.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10ssp"
        android:layout_marginRight="@dimen/_10ssp"
        android:padding="@dimen/_5ssp"
        android:text="@string/str_opening_hours"
        android:textColor="@color/color_black"
        android:textSize="@dimen/_15ssp" />

    <include layout="@layout/divider_view_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_10ssp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.app.barber.views.WheelView
            android:id="@+id/wheel_view_one"
            android:layout_width="@dimen/_100ssp"
            android:layout_height="@dimen/_100ssp"
            android:layout_weight="1">

        </com.app.barber.views.WheelView>

        <View
            android:layout_width="@dimen/_10ssp"
            android:layout_height="@dimen/_2ssp"
            android:layout_gravity="center"
            android:background="@color/colorPrimary" />

        <com.app.barber.views.WheelView
            android:id="@+id/wheel_view_two"
            android:layout_width="@dimen/_100ssp"
            android:layout_height="@dimen/_100ssp"
            android:layout_weight="1">

        </com.app.barber.views.WheelView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10ssp"
        android:orientation="horizontal">

        <com.app.barber.views.CustomTextView
            android:id="@+id/save_Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2ssp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_blue_drawable"
            android:gravity="center"
            android:padding="@dimen/_8ssp"
            android:text="@string/str_save"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_13ssp" />

        <com.app.barber.views.CustomTextView
            android:id="@+id/cancel_Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2ssp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_white_border"
            android:gravity="center"
            android:padding="@dimen/_8ssp"
            android:text="@string/str_cancel"
            android:textColor="@color/color_grey"
            android:textSize="@dimen/_13ssp" />
    </LinearLayout>
</LinearLayout>