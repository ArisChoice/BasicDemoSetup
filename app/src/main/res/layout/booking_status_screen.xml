<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_cream_white_background"
    android:orientation="vertical">

    <include layout="@layout/layout_common_toolbar_trans" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <include layout="@layout/layout_booking_status_view" />


            <include layout="@layout/layout_booking_barber_infi_view" />

            <include layout="@layout/layout_booking_info_view" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_10ssp"
                android:layout_marginRight="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="horizontal">

                <com.app.barber.views.CustomTextView
                    android:id="@+id/booked_services"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Booked services" />

                <com.app.barber.views.CustomTextView
                    android:id="@+id/booked_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0"
                    android:textColor="@color/color_black" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.app.barber.views.CustomTextView
        android:id="@+id/back_home_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10ssp"
        android:background="@drawable/rounder_blue_drawable"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="@string/str_go_home"
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/color_white" />
</LinearLayout>