<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_background"
    android:orientation="vertical">

    <include layout="@layout/layout_common_toolbar_trans" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10ssp"
                android:orientation="vertical">

                <com.app.barber.views.CustomTextView
                    android:id="@+id/top_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/str_add_service"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_16ssp" />

                <com.app.barber.views.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/str_you_can_add_more"
                    android:textColor="@color/color_light_grey_blue"
                    android:textSize="@dimen/_10ssp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10ssp"
                android:layout_marginRight="@dimen/_10ssp"
                android:orientation="vertical">

                <com.app.barber.views.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_service_name"
                    android:textColor="@color/color_light_grey_blue" />

                <com.app.barber.views.CustomEditText
                    android:id="@+id/edtxt_service_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5ssp"
                    android:background="@color/color_app_background"
                    android:ems="10"
                    android:focusableInTouchMode="true"
                    android:hint="@string/str_street_address"
                    android:lines="1"
                    android:maxLength="100"
                    android:paddingBottom="@dimen/_5ssp"
                    android:paddingRight="@dimen/_10ssp"
                    android:paddingTop="@dimen/_5ssp"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12ssp" />

                <include layout="@layout/divider_view_grey" />

            </LinearLayout>
            <!---->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10ssp"
                android:layout_marginRight="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_20ssp"
                android:orientation="vertical">

                <com.app.barber.views.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_duration"
                    android:textColor="@color/color_light_grey_blue" />

                <com.app.barber.views.CustomEditText
                    android:id="@+id/edtxt_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5ssp"
                    android:background="@color/color_app_background"
                    android:ems="10"
                    android:focusableInTouchMode="true"
                    android:hint="@string/str_street_address"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLength="100"
                    android:paddingBottom="@dimen/_5ssp"
                    android:paddingRight="@dimen/_10ssp"
                    android:paddingTop="@dimen/_5ssp"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12ssp" />

                <include layout="@layout/divider_view_grey" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10ssp"
                    android:layout_marginRight="@dimen/_10ssp"
                    android:layout_marginTop="@dimen/_20ssp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.app.barber.views.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_price"
                        android:textColor="@color/color_light_grey_blue" />

                    <com.app.barber.views.CustomEditText
                        android:id="@+id/edtxt_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5ssp"
                        android:background="@color/color_app_background"
                        android:ems="10"
                        android:focusableInTouchMode="true"
                        android:hint="@string/str_street_address"
                        android:inputType="number"
                        android:lines="1"
                        android:maxLength="100"
                        android:paddingBottom="@dimen/_5ssp"
                        android:paddingRight="@dimen/_10ssp"
                        android:paddingTop="@dimen/_5ssp"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_12ssp" />

                    <include layout="@layout/divider_view_grey" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10ssp"
                    android:layout_marginRight="@dimen/_10ssp"
                    android:layout_marginTop="@dimen/_20ssp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.app.barber.views.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_price_type"
                        android:textColor="@color/color_light_grey_blue" />

                    <com.app.barber.views.CustomEditText
                        android:id="@+id/edtxt_price_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5ssp"
                        android:background="@color/color_app_background"
                        android:ems="10"
                        android:focusableInTouchMode="true"
                        android:hint="@string/str_street_address"
                        android:lines="1"
                        android:maxLength="100"
                        android:paddingBottom="@dimen/_5ssp"
                        android:paddingRight="@dimen/_10ssp"
                        android:paddingTop="@dimen/_5ssp"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_12ssp" />

                    <include layout="@layout/divider_view_grey" />

                </LinearLayout>
            </LinearLayout>

            <com.app.barber.views.CustomTextView
                android:id="@+id/continue_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_30ssp"
                android:layout_marginRight="@dimen/_30ssp"
                android:layout_marginTop="@dimen/_50ssp"
                android:background="@drawable/rectangle_blue_drawable"
                android:gravity="center"
                android:padding="@dimen/_10ssp"
                android:text="@string/str_save"
                android:textColor="@color/color_white"
                android:textSize="@dimen/_13ssp"
                app:textAllCaps="true" />

            <com.app.barber.views.CustomTextView
                android:id="@+id/delete_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_30ssp"
                android:layout_marginRight="@dimen/_30ssp"
                android:layout_marginTop="@dimen/_10ssp"
                android:background="@drawable/rectangle_red_border_drawable"
                android:gravity="center"
                android:padding="@dimen/_10ssp"
                android:text="@string/str_delete_service"
                android:textColor="@color/color_red"
                android:visibility="gone"
                app:textAllCaps="true" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>