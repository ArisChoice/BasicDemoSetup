<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_30ssp"
        android:orientation="vertical">

        <com.app.barber.views.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/str_verify_mobile"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_20ssp" />

        <com.app.barber.views.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/str_waiting_for_automatically_detect"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_10ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.app.barber.views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/str_to"
                android:textColor="@color/color_white"
                android:textSize="@dimen/_10ssp" />

            <com.app.barber.views.CustomTextView
                android:id="@+id/wrong_Number_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5ssp"
                android:gravity="center"
                android:text="@string/str_wrong_number"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_10ssp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20ssp"
        android:gravity="center">

        <com.app.barber.views.CustomEditText
            android:id="@+id/edtxt_code_one"
            android:layout_width="@dimen/_40ssp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLength="1"
            android:text="7"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_20ssp" />

        <com.app.barber.views.CustomEditText
            android:id="@+id/edtxt_code_two"
            android:layout_width="@dimen/_40ssp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLength="1"
            android:text="7"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_20ssp" />

        <com.app.barber.views.CustomEditText
            android:id="@+id/edtxt_code_three"
            android:layout_width="@dimen/_40ssp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLength="1"
            android:text="7"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_20ssp" />

        <com.app.barber.views.CustomEditText
            android:id="@+id/edtxt_code_four"
            android:layout_width="@dimen/_40ssp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLength="1"
            android:text="7"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_20ssp" />
    </LinearLayout>

    <com.app.barber.views.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/str_four_digits_code"
        android:textColor="@color/color_white"
        android:textSize="@dimen/_10ssp" />

    <com.app.barber.views.CustomTextView
        android:id="@+id/verify_Number_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_10ssp"
        android:background="@drawable/rectangle_blue_drawable"
        android:paddingBottom="@dimen/_5ssp"
        android:paddingLeft="@dimen/_30ssp"
        android:paddingRight="@dimen/_30ssp"
        android:paddingTop="@dimen/_5ssp"
        android:text="@string/str_verifi_now"
        android:textAllCaps="true"
        android:textColor="@color/color_white"
        android:textSize="@dimen/_13ssp" />

    <com.app.barber.views.CustomTextView
        android:id="@+id/resend_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/str_resend_otp"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_10ssp" />

</LinearLayout>